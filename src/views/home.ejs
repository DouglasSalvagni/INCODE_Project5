<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
</head>
<body>

    <header class="container mb-3">
        <%- include('../partials/header',{title:'Home page', user:user}) %> 
    </header>

    <main class="container pt-5">
        <div class="row row-cols-1 row-cols-md-2 g-4">

            <% movies.map((movie)=> { %> 

                <div class="col">
                  <div class="card">
                    <img src="<%= movie.img%>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title">
                          <%= movie.title%>
                      </h5>
                      <h5 class="card-title text-secondary">
                          Community score: <%= (movie.totalScore / movie.totalVotes).toFixed(1)%>
                      </h5>
                      <h5 class="card-title text-secondary">
                          Total vote: <%= movie.totalVotes%>
                      </h5>

                      <% if(user) {%> 
                        <select name="rating" id="">
                            <option value="0" disabled>Rating</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                      <% } %> 
                    </div>
                  </div>
                </div>

            <% }) %> 

        </div>
    </main>
    
    <footer>
    </footer>
    <%- include('../partials/scripts') %> 
</body>
</html>